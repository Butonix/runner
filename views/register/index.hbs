{{var "title" "注册"}}
{{var "styles"
    [
        "/styles/font-awesome.min.css",
        "/styles/frame.css",
        "/styles/override.css",
        "/styles/mobile.css"
    ]
}}
{{var "scripts"
    [
        "/scripts/lib/jquery-3.2.1.min.js",
        "/scripts/app/frame.js",
        "/scripts/app/register.js"
    ]
}}

{{~> common/header ~}}
{{~> common/nav  ~}}

<div class="block-main">

    <div class="panel">
        <div class="panel-header">
            <div class="crumbs">
                <a href="{{path}}">首页</a>
                <span class="divider">／</span>
                <span class="current">注册</span>
            </div>
        </div>
        <div class="panel-content">
            <div class="frame-form">
                <div class="input-line">
                    <label>用户名：</label>
                    <div class="input-wrapper"><input type="text" name="username"></div>
                </div>
                <div class="input-line">
                    <label>密码：</label>
                    <div class="input-wrapper"><input type="password" name="password" autocomplete="off"></div>
                </div>
                <div class="input-line">
                    <label>重复密码：</label>
                    <div class="input-wrapper"><input type="password" name="repeatPassword" autocomplete="off"></div>
                </div>
                <div class="input-line">
                    <label>邮箱：</label>
                    <div class="input-wrapper"><input type="email" name="email"></div>
                </div>
                <div class="error-line">
                    <div class="error-wrapper">
                        <i class="fa fa-exclamation-circle"></i> <span>您输入的用户名或密码有误！</span>
                    </div>
                </div>
                <div class="btn-line">
                    <div class="btn-wrapper">
                        <a href="#" class="btn btn-primary" id="btn-register">注册</a> <a class="btn btn-primary" id="btn-github-login">通过 Github 登录</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{~> common/aside ~}}
{{~> common/footer ~}}