{{~> common/header ~}}
{{~> common/nav  ~}}

<div class="block-main">
    <div class="panel">
        <article class="article">
            <div class="article-header">
                <div class="title">
                    <span class="tag">讨论</span>
                    <h3>{{topic.title}}</h3>
                </div>
                <div class="info">
                    <span class="item">• 版块 [问答]</span>
                    <span class="item">• 作者 <a href="#">admin</a></span>
                    <span class="item">• 发布于 <span class="datetime-ago" data-datetime="2014-11-11 11:11:11"></span></span>
                    <span class="item">• 最后一次编辑 <span class="datetime-ago" data-datetime="2015-11-11 11:11:11"></span></span>
                    <span class="item">• 11 个回复</span>
                    <span class="item">• 728 次浏览</span>
                </div>
                <div class="operator">
                    <div>
                        <span class="btn" id="edit-topic"><i class="fa fa-edit"></i>编辑</span>
                        <span class="btn" id="delete-topic"><i class="fa fa-trash"></i>删除</span>
                        <!--<span class="btn"><i class="fa fa-star-o"></i>收藏</span>-->
                        <span class="btn"><i class="fa fa-star"></i>已收藏</span>
                        <!--<span class="btn"><i class="fa fa-thumbs-o-up"></i>点赞</span>-->
                        <span class="btn"><i class="fa fa-thumbs-up"></i>已点赞<span class="num">111</span></span>
                        <span class="btn"><i class="fa fa-thumbs-down"></i>已踩<span class="num">111</span></span>
                    </div>
                </div>
            </div>
            <div class="article-content">
                <div class="markdown-body">
                    <div class="markdown-text">{{{topic.content}}}</div>
                </div>
            </div>
        </article>
    </div>

    <input type="hidden" id="topic-id" name="topicId" value="{{topic.id}}">
    <input type="hidden" id="user-id" name="userId" value="{{user.id}}">

    <div class="panel">
        <div class="panel-header">
            <div class="title"><span>222</span> 条回复</div>
        </div>
        <div class="panel-content">

            <div class="no-data">
                暂无回复
            </div>

            {{#each comments}}
            <div class="comment highlight">
                <div class="avatar">
                    <a href="#"><img src="../images/avatar.png"></a>
                </div>
                <div class="info">
                    <dl>
                        <dt>
                        <div class="comment-info">
                            <a href="#" class="username">admin</a> • 1楼 • <span class="datetime-ago" data-datetime="2013-11-22 11:12:22"></span> • <span class="tag">作者</span>
                        </div>
                        <div class="operator">
                            <span class="btn"><i class="fa fa-edit"></i> 编辑</span>
                            <span class="btn"><i class="fa fa-trash"></i> 删除</span>
                            <span class="btn"><i class="fa fa fa-mail-reply"></i> 回复</span>
                            <span class="btn"><i class="fa fa-thumbs-up"></i>已点赞<span class="num">111</span></span>
                            <span class="btn"><i class="fa fa-thumbs-down"></i>已踩<span class="num">111</span></span>
                        </div>
                        </dt>
                        <dd>
                            <div class="markdown-body">
                                {{{content}}}
                            </div>
                        </dd>
                    </dl>
                </div>
            </div>
            {{/each}}

        </div>
    </div>

    <div class="panel">
        <div class="panel-header">
            <div class="title">添加回复</div>
        </div>
        <div class="panel-content">
            <div class="editor-wrapper">
                <div class="editor-wrapper-inner">
                    <textarea class="editor" id="reply-topic-editor"></textarea>
                </div>
                <div class="btn-line">
                    <span class="btn btn-primary" id="btn-reply-topic">回复</span>
                </div>
            </div>
        </div>
    </div>
</div>

{{~> common/aside ~}}
{{~> common/footer ~}}